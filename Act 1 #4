//Review Act 1. T55 #4
#include <stdio.h>
int main()
{
    int x, reverse = 0, remainder;
    printf("Input any integer: ");
    scanf("%d", &x);
    
    while (x != 0) 
    {
        remainder = x % 10;       
        reverse = reverse * 10 + remainder;
        x /= 10; 
    }
    printf("Reversed for %d is %d", x,reverse);
    
    return 0;
}
