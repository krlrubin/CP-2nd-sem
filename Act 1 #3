#include <stdio.h>
int main()
{
    int x;
    printf("Input any integer: ");
    scanf("%d", &x);

    switch (x>0)
    {
    case 1:
    printf("The integer is a positive number.");
    break;
    case 0:
    switch (x<0)
    {
        case 1:
        printf("The integer is a negative number.");
        break;
        case 0:
        printf("The inputed data is invalid.");
    }
    }
    return 0;
}
